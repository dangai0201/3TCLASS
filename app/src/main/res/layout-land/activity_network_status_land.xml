<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_network_stauts_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FF000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp2"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/network_stauts_excellent_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/living_network_stauts_excellent_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp2"
                    android:text="@string/network_stauts_delay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />

                <TextView
                    android:id="@+id/network_stauts_ms_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0ms"
                    android:textColor="@color/color_43EB73"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/network_stauts_packet_loss_rate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />

                <TextView
                    android:id="@+id/network_stauts_percentage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0%"
                    android:textColor="@color/color_43EB73"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/network_stauts_state"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />

                <TextView
                    android:id="@+id/network_stauts_op_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="优"
                    android:textColor="@color/color_43EB73"
                    android:textSize="@dimen/sp10" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/network_stauts_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:maxLines="1"
                android:text="课程名称"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/network_stauts_classes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/network_stauts_not_classes"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/network_stauts_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>