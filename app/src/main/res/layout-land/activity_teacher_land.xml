<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/RelativeLayout_teacher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">

            <WebView
                android:id="@+id/land_teacher_view_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tttlive.education.ui.widget.NetStatusView
                android:id="@+id/netStatusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<include layout="@layout/activity_network_status_land" />-->

            <include layout="@layout/studio_title_land_utile" />

            <include layout="@layout/teacher_tool_utils" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_teacher_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_video_tool_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:paddingBottom="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp5">

            <ImageView
                android:id="@+id/iv_live_navbar_unfold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/living_navbar_unfold_icon" />
        </LinearLayout>

        <include
            layout="@layout/animation_filling_cup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>


</RelativeLayout>