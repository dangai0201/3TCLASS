<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ff353535"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/teacher_head_video_land"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_ff353535" />

        <RelativeLayout
            android:id="@+id/land_rl_live_microphone_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/land_teacher_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/living_video_default_bg"/>

        </RelativeLayout>


        <ImageView
            android:id="@+id/land_iv_live_microphone_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_microphone_close2"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/land_rl_live_microphone_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/color_ff353535"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp2"
                android:src="@drawable/icon_microphone_open" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_teacher_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_bg_check"
                android:padding="@dimen/dp2"
                android:text="教师"
                android:textColor="@color/white"
                android:textSize="@dimen/dp14" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_live_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp2"
                    android:text="学员"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/dp2"
                    android:text="123456"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/live_video_stauts_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/living_video_stauts_microphone_icon" />

                <ImageView
                    android:id="@+id/live_video_stauts_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/living_video_stauts_camera_icon" />

                <ImageView
                    android:id="@+id/live_video_stauts_authorization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/living_video_stauts_authorization_icon" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>