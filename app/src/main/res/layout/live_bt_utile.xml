<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gone_visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/bt_hands"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_above="@+id/bt_settings"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/hands_select"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_settings"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_setting_normal"

        />


    <LinearLayout
        android:id="@+id/ll_in_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_toLeftOf="@+id/bt_settings"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bt_microphones"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/microphone_select"

            />

        <ImageView
            android:id="@+id/bt_cameras"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/camera_select"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_teacher_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_settings"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp15"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_radio_coursewares"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/icon_course_normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_radio_eliminate"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/icon_back_hover"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_radio_brush"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/selector_radio_brush"
            android:visibility="visible" />


    </LinearLayout>

</RelativeLayout>

