<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/course_type"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp22"
            android:text="课程类型："
            android:textColor="#FF333333"
            android:textSize="@dimen/sp16"
            />
        <TextView
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:id="@+id/course_typename"
           android:text="小班课"
            android:layout_toRightOf="@+id/course_type"
            android:layout_width="@dimen/dp255"
            android:layout_height="@dimen/dp54"
            />

    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/course_name"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp22"
            android:text="课程名称："
            android:textColor="#FF333333"
            android:textSize="@dimen/sp16"
            />
        <EditText
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:id="@+id/course_name_content"
            android:background="@drawable/shape_item_course"
            android:layout_toRightOf="@+id/course_name"
            android:layout_width="@dimen/dp255"
            android:layout_height="@dimen/dp54"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_course_num"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/course_num"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp22"
            android:text="教师人数："
            android:textColor="#FF333333"
            android:textSize="@dimen/sp16"
            />
        <TextView
            android:inputType="number"
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:id="@+id/course_num_content"
            android:text="7 人（1老师，6学生）"
            android:layout_toRightOf="@+id/course_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp54"
            />


    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/course_time"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp22"
            android:text="起始时间："
            android:textColor="#FF333333"
            android:textSize="@dimen/sp16"
            />
        <TextView
            android:textColor="@color/color_FF333333"
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:id="@+id/course_time_content"
            android:background="@drawable/shape_item_course"
            android:layout_toRightOf="@+id/course_time"
            android:layout_width="@dimen/dp255"
            android:layout_height="@dimen/dp54"
            />

    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/course_end_time"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp22"
            android:text="结束时间："
            android:textColor="#FF333333"
            android:textSize="@dimen/sp16"
            />
        <TextView
            android:textColor="@color/color_FF333333"
            android:paddingLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:id="@+id/course_end_time_content"
            android:background="@drawable/shape_item_course"
            android:layout_toRightOf="@+id/course_end_time"
            android:layout_width="@dimen/dp255"
            android:layout_height="@dimen/dp54"
            />

    </RelativeLayout>

</LinearLayout>