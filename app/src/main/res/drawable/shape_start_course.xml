<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    android:useLevel="false">

    <!-- 渐变 -->
    <gradient
        android:startColor="@color/color_course_start"
        android:endColor="@color/color_course_ent"
        android:angle="270"/>
    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/transparent" />
    <!-- 圆角 -->
    <corners
        android:radius="2dp" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>